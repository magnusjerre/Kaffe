form.centerContainer(action="registrerNyttBrygg", method="POST")
	input(name="bryggid", type="hidden")
	input(name="sammendrag", type="hidden", required)
	div.v2innhold
		label Bryggnavn:#[span.requiredNotOkay *]
		input.v2innholdInput(name="bryggnavn", placeholder="Gang of four", required)
	div.v2innhold
		label Brygger:#[span.requiredNotOkay *]
		input.v2innholdInput(name="brygger", placeholder="Jerre", required)
	div.v2innhold
		label Kaffe:#[span.requiredNotOkay *]
		select(name="kaffeid")
			option(selected="selected", disabled="disabled") Velg kaffe
	div.v2innhold
		label Liter:#[span.requiredNotOkay *]
		input.v2innholdInput(name="liter", placeholder="1.25", type="number", min="0.1", max="2.0", step="0.1", required)
	div.v2innhold
		label Skjeer:#[span.requiredNotOkay *]
		input.v2innholdInput(name="skjeer", placeholder="5.5", type="number", min="1", max="12", step="0.25", required)
	div.v2innhold(style="display: none")
		label Maskin:
		input.v2innholdInput(name="maskin", placeholder="Ja", type="checkbox", checked)
button.bryggsubmit(type="button") Registrer