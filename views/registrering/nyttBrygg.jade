form.v2centerContainer(action="registrerNyDagensKaffe", method="POST")
	div.v2registrerInnhold
		input(name="sammendrag", type="hidden")
		div.v2innhold
			label Bryggnavn:
			if nyttBrygg
				input.v2innholdInput(name="bryggnavn", placeholder="Gang of four")
			else
				p Gang of four
		div.v2innhold
			label Brygger:
			if nyttBrygg
				input.v2innholdInput(name="brygger", placeholder="Jerre")
			else
				p Jerre
		div.v2innhold
			label Kaffe:
			if nyttBrygg
				select(name="kaffeid")
					option(selected="selected", disabled="disabled") Velg kaffe
					each kaffe in dropdownkaffer
						option(value="#{kaffe.kaffeid}") #{kaffe.produsent} - #{kaffe.navn} (#{kaffe.type})
			else
				p Friele - Frokost kaffe (Malt)
		div.v2innhold
			label Liter:
			if nyttBrygg
				input.v2innholdInput(name="liter", placeholder="1.25", min="0.1", max="2.0", step="0.1")
			else
				p 1.25
		div.v2innhold
			label Skjeer:
			if nyttBrygg
				input.v2innholdInput(name="skjeer", placeholder="5.5", type="number", min="1", max="12", step="0.25")
			else
				p 5.5
		div.v2innhold
			label Maskin:
			if nyttBrygg
				input.v2innholdInput(name="maskin", placeholder="Ja", type="checkbox", checked)
			else
				p ja
	input.v2submit(type="submit", value="Registrer")