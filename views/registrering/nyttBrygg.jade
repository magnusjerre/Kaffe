form.v2centerContainer(action="registrerNyttBrygg", method="POST")
	div.v2registrerInnhold
		input(name="bryggid", type="hidden")
		input(name="sammendrag", type="hidden")
		div.v2innhold
			label Bryggnavn:
			input.v2innholdInput(name="bryggnavn", placeholder="Gang of four")
		div.v2innhold
			label Brygger:
			input.v2innholdInput(name="brygger", placeholder="Jerre")
		div.v2innhold
			label Kaffe:
			select(name="kaffeid")
				option(selected="selected", disabled="disabled") Velg kaffe
		div.v2innhold
			label Liter:
			input.v2innholdInput(name="liter", placeholder="1.25", min="0.1", max="2.0", step="0.1")
		div.v2innhold
			label Skjeer:
			input.v2innholdInput(name="skjeer", placeholder="5.5", type="number", min="1", max="12", step="0.25")
		div.v2innhold
			label Maskin:
			input.v2innholdInput(name="maskin", placeholder="Ja", type="checkbox", checked)
	button.v2submit(type="button") Registrer