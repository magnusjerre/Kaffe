doctype html
html
	head
		meta(charset="UTF-8")
		script(src="js/jquery-2.1.4.min.js", type="text/javascript")
		script(src="js/jQueryRotate.js", type="text/javascript")
		script(src="js/listdagenskaffe.js", type="text/javascript")
		script(src="js/index.js", type="text/javascript")
		link(rel="stylesheet", type="text/css", href="css/kaffe.css")
	body.container
		h1 Den store kaffesiden
		include nav.jade
		if gjetting && dagensbrygg && dagensbrygg.kaffe_navn != "Ukjent"
			include gjetteresultat.jade
		if dagensbrygg
			div.rectangle.dagenskaffe
				h2 Dagens kaffe
				img.karakterikon(src="images/arrow.png", alt="Arrow")
				//Table ligger i en ul slik at nedtrekksanimasjonen blir jevn. Kalles karakterer for Ã¥ kunne bruke eksisterende script
				ul.karakterer  
					li 
						table
							tr
								th Kaffenavn
								th Liter
								th Skjeer
								th Kaffemaker
							tr
								td#kaffenavnid #{dagensbrygg.kaffe_navn}
								td#kaffeliter #{dagensbrygg.liter}
								td#kaffeskjeer #{dagensbrygg.skjeer}
								td#kaffemaker #{dagensbrygg.brygger}
		if dagensbrygg == null || dagensbrygg.kaffe_navn == "Ukjent"
			div.rectangle.nydagenskaffe#nydagenskaffe
				h2 Ny dagens kaffe
				form(id="nyDagenskaffeForm", action="registrerNyDagensKaffe", method="POST")
					input(type="text", id="kaffeNavn", name="kaffeNavn", style="display:none")
					label(for="kaffeId") Kaffe
					select#kaffeId(name="kaffeId")
						each element in dropdownkaffer
							option(value="#{element._id}") #{element.produsent} - #{element.navn} (#{element.type}) 
					br
					br
					label(for="brygger") Kaffemaker
					input(type="text", id="brygger", name="brygger", placeholder="jerre...", required)
					br
					br
					label(for="liter") Liter
					input(type="number", id="liter", name="liter", min="0.1", step="0.05", required)
					br
					br
					label(for="skjeer") Skjeer
					input(type="number", id="skjeer", name="skjeer", min="0.25", step="0.25", required)
					br
					br
					input(id="submitNyDagenskaffe", type="submit", value="Submit")
		div.rectangle.nydagenskaffe
			h2 Ny karakter
			form(id="nyKarakterForm", action="giKarakter", method="POST")
				label(for="bruker_navn") Brukernavn
				input(type="text", id="bruker_navn", name="bruker_navn", placeholder="jerre...", required)
				br
				br
				label(for="karakter") Karakter
				input(type="number", id="karakter", name="karakter", min="0.5", step="0.5", required)
				br
				input(id="kaffeNavn", type="text", name="kaffeNavn", style="display: none")
				br
				label(for="kaffeId") Gjett kaffenavn
				select#kaffeId(name="kaffeId")
					each element in dropdownkaffer
						option(value="#{element._id}") #{element.produsent} - #{element.navn} (#{element.type}) 
				input(id="submitNyKarakter", type="submit", value="Submit")