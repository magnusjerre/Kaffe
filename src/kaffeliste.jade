doctype html
html
	head
		meta(charset="UTF-8")
		link(rel="stylesheet", type="text/css", href="kaffe.css")
		script(src="jquery-2.1.4.min.js", type="text/javascript")
		script(src="kaffeliste.js", type="text/javascript")
	body.container
		h1 Den store kaffesiden
		include nav.jade
		each produsent in produsenter
			div.rectangle.dagenskaffe
				h2 #{produsent["_id"]} 
				ul#kaffeliste
					each kaffe in produsent.kaffe
						li.smallrectangle.container
							table
								tr
									th Kaffenavn
									th Type
									th Land
									th Vis
								tr
									td #{kaffe.navn}
									td #{kaffe.type}
									td #{kaffe.land}
									td #[input(id=kaffe._id, type="checkbox", checked=kaffe.vis)]
									
									